@page
@model Test_Project.Pages.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h3>آیا از حذف این مورد مطمئن هستید؟</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            نام و نام خانوادگی
        </dt>
        <dd class="col-sm-10">
            @Model.Employee.FullName
        </dd>
        <dt class="col-sm-2">
            موبایل
        </dt>
        <dd class="col-sm-10">
            @Model.Employee.Mobile
        </dd>
        <dt class="col-sm-2">
            سن
        </dt>
        <dd class="col-sm-10">
            @Model.Employee.Age
        </dd>
        <dt class="col-sm-2">
            آدرس
        </dt>
        <dd class="col-sm-10">
            @Model.Employee.Address
        </dd>
    </dl>

    <form method="post">
        <input type="submit" value="حذف" asp-page-handler="Delete" asp-route-id="@Model.Employee.id" class="btn btn-danger" />
        <input type="submit" value="انصراف" asp-page-handler="Cancel" class="btn btn-secondary" />
    </form>
</div>
