@page
@model Test_Project.Pages.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>ویرایش</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Employee.id" />
            <div class="form-group">
                <label class="control-label">نام و نام خانوادگی</label>
                <input asp-for="Employee.FullName" class="form-control" />
                <span asp-validation-for="Employee.FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">موبایل</label>
                <input asp-for="Employee.Mobile" class="form-control" />
                <span asp-validation-for="Employee.Mobile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">سن</label>
                <input asp-for="Employee.Age" class="form-control" />
                <span asp-validation-for="Employee.Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">آدرس</label>
                <input asp-for="Employee.Address" class="form-control" />
                <span asp-validation-for="Employee.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="ذخیره" class="btn btn-primary" />
                <a class="btn btn-secondary" asp-page="./EFCore">انصراف</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
