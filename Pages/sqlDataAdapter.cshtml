@page
@model Test_Project.Pages.sqlDataAdapter
@{
    @addTagHelper *,LazZiya.TagHelpers

    ViewData["Title"] = "SqlDataAdapter";

    <style>
        table {
            font-family: arial, sans-serif;
            width: 100%;
            box-shadow: 0 0 40px 0 rgba(0,0,0,.15);
        }

        th {
            background-color: #6c7ae0;
            color: #fff;
        }

        td, th {
            border: 1px solid #dddddd;
            text-align: center;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #f8f6ff;
        }

        .pagination {
            display: flex;
            justify-content: center;
            direction: ltr !important;
        }

            .pagination a {
                color: black;
            }

                .pagination a.active {
                    background-color: dodgerblue;
                    color: white;
                }

                .pagination a:hover:not(.active) {
                    background-color: #ddd;
                }
    </style>


    <h1 style="text-align:center">صفحه تست SqlDataAdapter</h1>
    <br />

    if (Model.TotalRecords > 0)
    {
        if (TempData["EditButton"] != null)
        {
            <div style="display:flex; justify-content:center; position:absolute; z-index:1;">
                <form method="post" style="width:80%; border:1px solid black; background:#f8f6ff;">
                    <label style="width:45%; margin:2%;">نام و نام خانوادگی: <input style="width:100%;" type="text" name="EditFullname" value="@TempData["EditFullname"]" /></label>

                    <label style="width:45%; margin:2%;">موبایل: <input style="width:100%;" type="text" name="EditMobile" value="@TempData["EditMobile"]" /></label>

                    <label style="width:45%; margin:2%;">سن: <input style="width:100%;" type="number" name="EditAge" value="@TempData["EditAge"]" /></label>

                    <label style="width:45%; margin:2%;">آدرس: <input style="width:100%;" type="text" name="EditAddress" value="@TempData["EditAddress"]" /></label>

                    <input type="submit" value="ذخیره" asp-page-handler="EditSubmit" asp-route-EditId="@TempData["EditId"]" />
                </form>
            </div>
        }

        <table>
            <tr>
                <th style="padding:3px !important;">ردیف</th>
                <th>نام و نام خانوادگی</th>
                <th>موبایل</th>
                <th style="padding:12px !important;">سن</th>
                <th>آدرس</th>
                <th></th>
            </tr>
            @foreach (DataRow row in Model.Cultures)
            {
                <tr>
                    <td>@row["ردیف"]</td>
                    <td>@row["نام و نام خانوادگی"]</td>
                    <td>@row["موبایل"]</td>
                    <td>@row["سن"]</td>
                    <td>@row["آدرس"]</td>
                    <td>
                        <form method="post">
                            <input type="submit" value="ویرایش" asp-page-handler="Edit" asp-route-EditId="@row["ردیف"]" asp-route-EditFullname="@row["نام و نام خانوادگی"]" asp-route-EditMobile="@row["موبایل"]" asp-route-EditAge="@row["سن"]" asp-route-EditAddress="@row["آدرس"]" />
                            <input type="submit" value="حذف" asp-page-handler="Delete" asp-route-DeleteId="@row["ردیف"]" />
                        </form>
                    </td>
                </tr>
            }
        </table>

        <br />

        if (Model.TotalRecords > Model.PageSize)
        {
            <paging total-records="Model.TotalRecords"
        page-no="Model.PageNo"
        page-size="Model.PageSize"
        text-next=""
        text-previous=""
        sr-text-previous="&laquo;"
        sr-text-next="&raquo;"
        show-first-last="false"
        show-page-size-nav="false"
        max-displayed-pages="5"
        class="pagination">
            </paging>

            <br />
        }

        <form method="post">
            <input type="submit" value="Export Excel" asp-page-handler="ExportExcel" />
            <input type="submit" value="Export PDF" asp-page-handler="ExportPDF" />
        </form>
    }
    else
    {
        <h1 style="text-align:center">!متاسفانه داده ای جهت نمایش یافت نشد</h1>
    }

    

}