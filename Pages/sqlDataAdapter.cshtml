@page
@model Test_Project.Pages.sqlDataAdapter
@{
    @addTagHelper *,LazZiya.TagHelpers

    ViewData["Title"] = "SqlDataAdapter";

    <style>
        table {
            font-family: arial, sans-serif;
            width: 100%;
            box-shadow: 0 0 40px 0 rgba(0,0,0,.15);
        }

        th {
            background-color: #6c7ae0;
            color: #fff;
        }

        td, th {
            border: 1px solid #dddddd;
            text-align: center;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #f8f6ff;
        }

        .pagination {
            display: flex;
            justify-content: center;
            direction: ltr !important;
        }

            .pagination a {
                color: black;
                float: left;
                padding: 8px 16px;
                text-decoration: none;
                transition: background-color .3s;
            }

                .pagination a.active {
                    background-color: dodgerblue;
                    color: white;
                }

                .pagination a:hover:not(.active) {
                    background-color: #ddd;
                }
    </style>


    <h1 style="text-align:center">صفحه تست SqlDataAdapter</h1>
    <br />

    if (Model.TotalRecords > 0)
    {
        <table>
            <tr>
                <th style="padding:3px !important;">ردیف</th>
                <th>نام و نام خانوادگی</th>
                <th>موبایل</th>
                <th style="padding:12px !important;">سن</th>
                <th>آدرس</th>
            </tr>
            @foreach (DataRow row in Model.Cultures)
            {
                <tr>
                    <td>@row["id"]</td>
                    <td>@row["FullName"]</td>
                    <td>@row["Mobile"]</td>
                    <td>@row["Age"]</td>
                    <td>@row["Address"]</td>
                </tr>
            }
        </table>

        <br />

        <paging total-records="Model.TotalRecords"
        page-no="Model.PageNo"
        page-size="Model.PageSize">
        </paging>
    }
    else
    {
        <h1 style="text-align:center">!متاسفانه داده ای جهت نمایش یافت نشد</h1>
    }

}